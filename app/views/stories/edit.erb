<%if logged_in?%>

<h2>Edit your story</h2>

<form action="/stories/<%=@story.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
        <p><input type="text" value="<%=@story.title%>" name="title"></p>
        <p><textarea id="content_box" maxlength="500" style="width:25%; height: 150px;" name="content"><%=@story.content%></textarea></p>
        <input type="submit" value="submit">
    </form>
    <form action="/stories/<%=@story.id%>" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="delete story">
    </form>
<%else%>
    <h2>You must be logged in to edit this post</h2>
<%end%>
