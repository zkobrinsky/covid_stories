<h2>Edit your story</h2>

<form action="/stories/<%=@story.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
        <p><input type="text" value="<%=@story.title%>" name="title"></p>
        <p><textarea id="content_box" maxlength="500" style="width:25%; height: 150px;" name="content"><%=@story.content%></textarea></p>

    <%if logged_in?%>
    <input type="submit" value="submit">
    <%else%>
    # Must login to edit
    <%end%>
</form>